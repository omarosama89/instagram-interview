<table border="0" cellpadding="0" cellspacing="0" width="100%" class="mcnTextBlock" style="min-width:100%;">
  <tbody class="mcnTextBlockOuter">
  <tr>
    <td valign="top" class="mcnTextBlockInner" style="padding-top:9px;">
      <table align="left" border="0" cellpadding="0" cellspacing="0" style="max-width:100%; min-width:100%;" width="100%" class="mcnTextContentContainer">
        <tbody>
        <tr>
          <td valign="top" class="mcnTextContent" style="padding-top:0; padding-right:18px; padding-bottom:9px; padding-left:18px;">
            <h2 style="text-align: center;"><span style="font-family:lucida sans unicode,lucida grande,sans-serif">We've received your order!<br>
                  <br>
                  <strong>Order code :</strong>&nbsp;<%= @order_row.order_code %></span>
            </h2>
            &nbsp;
            <div style="text-align: center;">
              <span style="font-family:lucida sans unicode,lucida grande,sans-serif">Thanks for using Instajax services.</span>
            </div>
            <div style="text-align: center;">&nbsp;</div>
          </td>
        </tr>
        </tbody>
      </table>
    </td>
  </tr>
  </tbody>
</table>
<table border="0" cellpadding="0" cellspacing="0" width="100%" class="mcnTextBlock" style="min-width:100%;">
  <tbody class="mcnTextBlockOuter">
  <tr>
    <td valign="top" class="mcnTextBlockInner" style="padding-top:9px;">
      <table align="left" border="0" cellpadding="0" cellspacing="0" style="max-width:100%; min-width:100%;" width="100%" class="mcnTextContentContainer">
        <tbody>
        <tr>
          <td valign="top" class="mcnTextContent" style="padding-top:0; padding-right:18px; padding-bottom:9px; padding-left:18px;">
            <h1 class="null">
              <span style="font-family:lucida sans unicode,lucida grande,sans-serif"><strong>Order details :&nbsp;</strong></span>
            </h1>
            <div style="text-align: center;">
              <% @order_details.each do |ord| %>
                <a class="btn-link" href="<%= ord.link %>"><span style="font-family:lucida sans unicode,lucida grande,sans-serif"><%= ord.link.split('/').last %></span></a>&nbsp;(<%= ord.amount %>
                )<br>
              <% end %>
            </div>
          </td>
        </tr>
        </tbody>
      </table>
    </td>
  </tr>
  </tbody>
</table>
