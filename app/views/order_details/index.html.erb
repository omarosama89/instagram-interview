<p id="notice"><%= notice %></p>

<h1>Order Details</h1>

<table>
  <thead>
  <tr>
    <th>Link</th>
    <th>Amount</th>
    <th>Api order</th>
    <th>Status</th>
    <th>Order row</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.link %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.api_order_id %></td>
      <td><%= order_detail.status %></td>
      <td><%= order_detail.order_row %></td>
      <td><%= link_to 'Show', order_detail %></td>
      <td><%= link_to 'Edit', edit_order_detail_path(order_detail) %></td>
      <td><%= link_to 'Destroy', order_detail, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order Detail', new_order_detail_path %>
